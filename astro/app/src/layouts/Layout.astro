---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}

	html {
		font-family: system-ui, sans-serif;
		background-image: linear-gradient(to top, pink, #9a05f3);
    height: 100%;
	}

	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}

	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}

	section > from {
		display: flex;
		flex-direction: row;
	}

	section > form > div {
    width: 100%;
    display: flex;
		flex-direction: column;
		margin: 20px 0;
	}
	
  textarea {
    height: 150px;
    padding: 12px 20px;
    box-sizing: border-box;
    border: 2px solid #ccc;
    border-radius: 4px;
    background-color: #13151a;
    font-size: 16px;
    color: white;
  }
  label {
    align-self: baseline;
  }
  input {
    padding: 12px 20px;
    border: 2px solid #ccc;
    border-radius: 4px;
    background-color: #13151a;
    font-size: 16px;
    color: white;
  }

	button {
		font-size: 0.8em;
    color: white;
    border: 2px solid #ccc;
    border-radius: 4px;
    background-color: #13151a;
    width: 100%;
    height: 40px;
  }

	.hint {
    font-size: 0.75em;
  }
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
